{
  "name": "forge",
  "version": "1.0.0",
  "description": "A utility for deploying migrations for changing system state.",
  "main": "cli.js",
  "type": "module",
  "bin": {
    "forge": "bin/forge-cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "lint:ci": "eslint .",
    "test": "npm run test:unit && npm run test:func",
    "test:unit": "FCI_TEST_TYPE=unit npm run test:covrun --parallel",
    "test:func": "FCI_TEST_TYPE=func npm run test:covrun --parallel",
    "test:unitcov": "FCI_TEST_TYPE=unit npm run test:covrun",
    "test:funccov": "FCI_TEST_TYPE=func npm run test:covrun",
    "test:covrun": "c8 --reporter=lcov --reporter=text-summary --report-dir=tests/reports/$FCI_TEST_TYPE npm run test:run",
    "test:run": "mocha --loader=esmock tests/$FCI_TEST_TYPE",
    "cov:unit": "FCI_TEST_TYPE=unit npm run cov:run",
    "cov:func": "FCI_TEST_TYPE=func npm run cov:run",
    "cov:run": "open tests/reports/$FCI_TEST_TYPE/lcov-report/index.html"
  },
  "mocha": {
    "recursive": true,
    "extension": ".spec.js"
  },
  "keywords": [],
  "author": "Jordan Nornhold",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "find-up": "^6.2.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "n": "^8.0.2",
    "pino": "^7.6.3"
  },
  "devDependencies": {
    "c8": "^7.11.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dirty-chai": "^2.0.1",
    "eslint": "^8.7.0",
    "eslint-plugin-mocha": "^10.0.3",
    "esmock": "^1.7.2",
    "husky": "^7.0.4",
    "mocha": "^9.1.4",
    "sinon": "^12.0.1"
  },
  "forge": {
    "comment": "This is only used for functional tests",
    "logLevel": "fatal",
    "migrationStatePluginFile": "tests/mocks/MockMigrationStatePlugin.js",
    "migrationsDirectory": "tests/mocks/migrations"
  }
}
