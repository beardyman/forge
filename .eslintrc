{
  "extends": [
    "eslint:recommended",
    "plugin:mocha/recommended"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "max-len": ["error", {
      "code": 150,
      "tabWidth": 2
    }],
    "quotes": ["error", "single"],
    "quote-props": ["error", "as-needed"],
    "semi": "error"
  },
  "overrides": [
    {
      "files": [
        "tests/**/*.spec.js"
      ],
      "globals": {
        "expect": "writeable",
        "esmock": "writeable",
        "sinon": "writeable"
      },
      "rules": {

      }
    }
  ]
}
